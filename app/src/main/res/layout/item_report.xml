<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_space_small"
        android:layout_marginLeft="@dimen/layout_space_small"
        android:layout_marginRight="@dimen/layout_space_small">
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/layout_space_small"
            android:layout_marginLeft="@dimen/layout_space_small"
            android:layout_marginRight="@dimen/layout_space_xsmall"
            android:text="Date Time"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/layout_space_small"
            android:layout_marginLeft="@dimen/layout_space_xsmall"
            android:layout_marginRight="@dimen/layout_space_small"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="Status"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_space_large"
        android:layout_marginRight="@dimen/layout_space_large"
        android:layout_marginBottom="@dimen/layout_space_small"
        android:textSize="@dimen/material_typography_body1"
        android:text="Isi Text"
        android:maxLines="2"
        android:ellipsize="end"/>
</LinearLayout>