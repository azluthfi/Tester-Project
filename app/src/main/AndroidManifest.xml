<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tool="http://schemas.android.com/tools"
          package="com.app.base">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        tool:replace="android:icon"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.app.base.modules.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>


        <!-- [START firebase_service] -->
        <service
            android:name="com.app.base.fcm.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <!-- [END firebase_service] -->
        <!-- [START firebase_iid_service] -->
        <service
            android:name="com.app.base.fcm.MyFirebaseInstanceIDService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name="com.app.base.fcm.PopUpNotif"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Base.V7.Theme.AppCompat.Light.Dialog" />
        <activity
            android:name="com.app.base.fcm.PopUpNotifFull"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Base.V7.Theme.AppCompat.Light.Dialog" />
    </application>

</manifest>