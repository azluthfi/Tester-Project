<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- ProgressBar -->
        <item name="cpbStyle">@style/CircularThemeProgressBar</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Splash">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CircularThemeProgressBar" parent="android:Widget.Holo.ProgressBar">
        <item name="cpb_colors">@array/loading_colors</item>
        <item name="cpb_stroke_width">@dimen/cpb_default_stroke_width</item>
        <item name="cpb_min_sweep_angle">@integer/cpb_default_min_sweep_angle</item>
        <item name="cpb_max_sweep_angle">@integer/cpb_default_max_sweep_angle</item>
        <item name="cpb_sweep_speed">@string/cpb_default_sweep_speed</item>
        <item name="cpb_rotation_speed">@string/cpb_default_rotation_speed</item>
    </style>

    <style name="buttonDefault">
        <item name="android:layout_height">@dimen/buttonDefaultHeight</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#dbdbdb</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!--Button-->
    <style name="ButtonColorDefault" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/md_grey_300</item>
    </style>

    <style name="ButtonColorPrimary" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/md_blue_500</item>
    </style>

    <style name="ButtonColorSuccess" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/md_green_500</item>
    </style>

    <style name="ButtonColorWarning" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/md_orange_500</item>
    </style>

    <style name="ButtonColorError" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/md_red_500</item>
    </style>

    <style name="ButtonDefault" parent="Widget.AppCompat.Button.Colored">
        <item name="theme">@style/ButtonColorDefault</item>
        <item name="colorButtonNormal">@color/md_grey_300</item>
        <item name="android:textColor">@color/md_grey_900</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button.Colored">
        <item name="theme">@style/ButtonColorPrimary</item>
        <item name="colorButtonNormal">@color/md_blue_500</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="ButtonSuccess" parent="Widget.AppCompat.Button.Colored">
        <item name="theme">@style/ButtonColorSuccess</item>
        <item name="colorButtonNormal">@color/md_green_500</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="ButtonWarning" parent="Widget.AppCompat.Button.Colored">
        <item name="theme">@style/ButtonColorWarning</item>
        <item name="colorButtonNormal">@color/md_orange_500</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="ButtonError" parent="Widget.AppCompat.Button.Colored">
        <item name="theme">@style/ButtonColorError</item>
        <item name="colorButtonNormal">@color/md_red_500</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <!--End Button-->

    <!--TextView-->
    <style name="textTitle">
        <item name="android:textSize">@dimen/material_typography_title</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="textTitleWhite">
        <item name="android:textSize">@dimen/material_typography_title</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="textHeadline">
        <item name="android:textSize">@dimen/material_typography_headline</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="textHeadlineWhite">
        <item name="android:textSize">@dimen/material_typography_headline</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="textSubHeading">
        <item name="android:textSize">@dimen/material_typography_subheading</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="textSubTitle">
        <item name="android:textSize">@dimen/material_typography_body1</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="textCaptionWhite">
        <item name="android:textSize">@dimen/material_typography_caption</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="textCaption">
        <item name="android:textSize">@dimen/material_typography_caption</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="textDisplay1White">
        <item name="android:textSize">@dimen/material_typography_display1</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="textDisplay1">
        <item name="android:textSize">@dimen/material_typography_display1</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_white_disabled</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>
