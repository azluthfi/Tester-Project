<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/white"
             tools:context="com.app.basarnas.modules.information.AboutFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                style="@style/textTitle"
                android:layout_marginTop="@dimen/layout_space_large"
                android:layout_marginLeft="@dimen/layout_space_large"
                android:layout_marginRight="@dimen/layout_space_large"/>

            <TextView
                android:id="@+id/tvVersionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Versi"
                style="@style/textSubTitle"
                android:layout_marginTop="@dimen/layout_space_small"
                android:layout_marginRight="@dimen/layout_space_large"
                android:layout_marginLeft="@dimen/layout_space_large"
                android:layout_marginBottom="@dimen/layout_space_large"/>

            <TextView
                android:id="@+id/tvContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/layout_space_large"
                android:background="?attr/selectableItemBackground"
                android:textSize="@dimen/material_typography_body1"
                android:text="Hubungi Kami"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
